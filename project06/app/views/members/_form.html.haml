= form_for @member do |f|
  = f.error_messages
  %p
    = f.label :username
    %br
    = f.text_field :username
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :firstname
    %br
    = f.text_field :firstname
  %p
    = f.label :lastname
    %br
    = f.text_field :lastname
  %p
    = f.label :password
    %br
    = f.text_field :password
  %p
    = f.submit

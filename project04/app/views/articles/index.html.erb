<h1>Articl.es</h1>
<h2>...with a name .com hipsters love!</h2>

<table>
 <col /><col /><col /><col />
  <tr>
    <th>Title</th>
    <th>Author Name</th>
    <th>Body</th>
    <th>Creation Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
<col />
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td class="title"><%= article.title %></td>
    <td class="author"><%= article.author %></td>
    <td class="body"><%= truncate(article.body, length: 100) %></td>
    <td class="date"><%= article.created_at.to_s :article_time %></td>
    <td class="button"><%= link_to 'View', article %></td>
    <td class="button"><%= link_to 'Edit', edit_article_path(article) %></td>
    <td class="button"><%= link_to 'Delete', article, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

